<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!--<context:annotation-config/>-->
    <context:component-scan base-package="beans">
        <context:exclude-filter type="assignable" expression="beans.AopBean"/>
        <context:exclude-filter type="assignable" expression="beans.SimpleBean"/>
    </context:component-scan>

    <!-- bean definitions here -->
    <bean id="xmlBean" class="beans.XmlBean" init-method="init">
        <property name="name" value="Hello"/>
        <property name="dependencyBean" ref="dependency"/>
    </bean>
    <alias name="xmlBean" alias="xb"/>

    <bean id="dependency" class="beans.XmlDependencyBean">
        <property name="value" value="100"/>
    </bean>

</beans>